termcapinfo xterm ti@:te@

escape ^Bb

startup_message off
vbell off
defscrollback 10000
multiuser on
acladd root,dbartle
term screen-256color

hardstatus on
hardstatus alwayslastline
hardstatus string "%{rk}%H %{gk}%c %{yk}%M%d %{wk}%?%-Lw%?%{bw}%n*%f%t%?(%u)%?%{wk}%?%+Lw%?"

screen 0
select 0
exec $HOME/bin/screen-ssh-agent
exec true
source $HOME/.ssh/screen_agent
